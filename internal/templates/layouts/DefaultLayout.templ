package layouts

import (
	"github.com/authly/internal/templates/components"
	"github.com/authly/internal/templates"
)

templ head() {
	<!DOCTYPE html>
	<html lang="ko">
		<head>
			<meta charset="UTF-8"/>
			@components.Title(false)
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<script src="static/script/htmx.js"></script>
			// <script src="static/script/response-targets.js"></script>
			if templates.IsProduction(ctx) {
				<link rel="stylesheet" href="static/css/style.min.css"/>
			} else {
				<link rel="stylesheet" href="static/css/style.css"/>
			}
		</head>
	</html>
}

templ footer() {
	<footer>
		<p>Â© 2024 Authly</p>
	</footer>
}

templ DefaultLayout() {
	@head()
	<body>
		@components.NavBar(false)
		<main>
			{ children... }
		</main>
		@footer()
	</body>
}
